{
  "name": "drazenbebic/wordpress-plugin-boilerplate",
  "version": "0.1.0",
  "type": "wordpress-plugin",
  "license": "MIT",
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=phpcs.xml",
    "lint-fix": "./vendor/bin/phpcbf --standard=phpcs.xml"
  },
  "autoload": {
    "psr-4": {
      "WordPressPluginBoilerplate\\": "src/includes/"
    }
  },
  "authors": [
    {
      "name": "Drazen Bebic",
      "email": "drazen@bebic.at",
      "homepage": "https://drazen.bebic.dev",
      "role": "developer"
    }
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^3.0",
    "php-stubs/wordpress-globals": "^v0.2.0",
    "php-stubs/wordpress-stubs": "^v6.6.0"
  }
}